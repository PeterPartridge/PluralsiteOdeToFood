@page "{id}"
@using PluralsiteOdeToFood.Pages.Restaurants
@model EditModel



@{
    ViewBag.Title = "Edit ";
}

<h1>Edit @Model.Restaurant.name</h1>

<div>
    <form method="post">
        <input type="hidden" asp-for="Restaurant.id" />
        <div>
            <span asp-validation-summery></span>
        </div>
        <div>
            <label asp-for="Restaurant.name"></label>
            <input asp-for="Restaurant.name" placeholder="Add a name" />
            <span asp-validation-for="Restaurant.name"></span>
        </div>
        <div>
            <label asp-for="Restaurant.Cusine"></label>
            <select asp-for="Restaurant.Cusine" asp-items="@Html.GetEnumSelectList<CusineType>()"></select>
            <span asp-validation-for="Restaurant.Cusine"></span>
        </div>

        <input type="submit" name="save" value="Save" />

    </form>
</div>
